<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationMobilePointeuse.Views.QRCode"
             Title="QR Code">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                x:Name="MyQRCode"
                Source="qrcode"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="QR Code"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                x:Name="QRCodeText"
                Text="Vous pouvez générer un QR Code en appuyant sur le bouton ci-dessous"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="QRCodeButton"
                Text="Générer un QR Code"
                Clicked="GetQRCode"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>