<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApplicationMobilePointeuse.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ApplicationMobilePointeuse"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Accueil"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage"
            Icon="home" />

        <ShellContent
            Title="QR Code"
            ContentTemplate="{DataTemplate local:Views.QRCode}"
            Route="QRCode"
            Icon="qrcode" />
    </TabBar>

</Shell>
